{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Theme Usage Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "theme_preference_total",
          "legendFormat": "Total Theme Preferences",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "title": "Theme Switch Frequency",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(theme_switch_total[5m])",
          "legendFormat": "{{theme}} switches/sec",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "xAxis": {
        "show": true
      },
      "yAxes": [
        {
          "label": "Switches per second",
          "show": true
        }
      ]
    },
    {
      "title": "Theme Distribution",
      "type": "piechart",
      "targets": [
        {
          "expr": "theme_preference_count",
          "legendFormat": "{{theme}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "options": {
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "title": "Theme API Response Time",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"backend-api\",route=~\"/api/v1/themes.*\"}[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"backend-api\",route=~\"/api/v1/themes.*\"}[5m]))",
          "legendFormat": "50th percentile",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "yAxes": [
        {
          "label": "Response time (seconds)",
          "show": true
        }
      ]
    },
    {
      "title": "Theme API Error Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"backend-api\",route=~\"/api/v1/themes.*\",status=~\"5..\"}[5m])",
          "legendFormat": "5xx errors/sec",
          "refId": "A"
        },
        {
          "expr": "rate(http_requests_total{job=\"backend-api\",route=~\"/api/v1/themes.*\",status=~\"4..\"}[5m])",
          "legendFormat": "4xx errors/sec",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "yAxes": [
        {
          "label": "Errors per second",
          "show": true
        }
      ]
    },
    {
      "title": "Theme Transition Performance",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(theme_transition_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile transition time",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(theme_transition_duration_seconds_bucket[5m]))",
          "legendFormat": "Median transition time",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "yAxes": [
        {
          "label": "Transition time (seconds)",
          "show": true
        }
      ]
    },
    {
      "title": "Cache Hit Rate - Theme Data",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(theme_cache_hits_total[5m]) / (rate(theme_cache_hits_total[5m]) + rate(theme_cache_misses_total[5m])) * 100",
          "legendFormat": "Cache hit rate %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "yAxes": [
        {
          "label": "Hit rate %",
          "show": true,
          "min": 0,
          "max": 100
        }
      ]
    },
    {
      "title": "User Sessions by Theme Preference",
      "type": "graph",
      "targets": [
        {
          "expr": "user_sessions_by_theme",
          "legendFormat": "{{theme}} theme users",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "yAxes": [
        {
          "label": "Active sessions",
          "show": true
        }
      ]
    },
    {
      "title": "System Theme Detection Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(system_theme_detection_total[1h]) * 3600",
          "legendFormat": "System theme detections/hour",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 32
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "short"
        }
      }
    },
    {
      "title": "Theme Persistence Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "theme_persistence_success_total / (theme_persistence_success_total + theme_persistence_error_total) * 100",
          "legendFormat": "Success rate %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 32
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 90
              },
              {
                "color": "yellow",
                "value": 95
              },
              {
                "color": "green",
                "value": 98
              }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "title": "Memory Usage - Theme System",
      "type": "graph",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"backend-api\"} / 1024 / 1024",
          "legendFormat": "Backend memory (MB)",
          "refId": "A"
        },
        {
          "expr": "theme_cache_memory_bytes / 1024 / 1024",
          "legendFormat": "Theme cache memory (MB)",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      },
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ]
    }
  ],
  "schemaVersion": 27,
  "style": "dark",
