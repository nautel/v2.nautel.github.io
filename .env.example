# Environment Configuration Template
# Copy this file to .env.local for local development
# and configure appropriate values for each environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Application URLs
GATSBY_SITE_URL=https://nautel.dev
GATSBY_API_URL=https://api.nautel.dev

# Theme API Configuration
GATSBY_THEME_API_URL=https://api.nautel.dev/api/v1
GATSBY_THEME_API_VERSION=v1

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics
GATSBY_GA_TRACKING_ID=UA-XXXXXXXXX-X
GATSBY_ANALYTICS_ENABLED=true

# Sentry Error Tracking
GATSBY_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (for user preferences)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=your-secure-password
DB_SSL=require

# MongoDB (for analytics and theme usage data)
MONGODB_URI=mongodb://username:password@localhost:27017/portfolio_analytics
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-mongo-password
MONGO_DB_NAME=portfolio_analytics

# =============================================================================
# CACHING AND SESSION MANAGEMENT
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600

# Session Configuration
SESSION_SECRET=your-very-secure-session-secret-min-32-chars
JWT_SECRET=your-jwt-secret-for-api-authentication

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Application Insights (Optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://nautel.dev,https://www.nautel.dev

# =============================================================================
# CI/CD AND DEPLOYMENT
# =============================================================================

# GitHub Configuration
GITHUB_TOKEN=your-github-token

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=nautel

# Domain Configuration
DOMAIN_NAME=nautel.dev
API_DOMAIN=api.nautel.dev

# SSL Certificate paths (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# =============================================================================
# PERFORMANCE AND OPTIMIZATION
# =============================================================================

# CDN Configuration
CDN_URL=https://cdn.nautel.dev
GATSBY_CDN_URL=https://cdn.nautel.dev

# Image optimization
GATSBY_IMAGE_CDN=cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Bundle Analysis
ANALYZE_BUNDLE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Theme System Features
GATSBY_ENABLE_THEME_ANALYTICS=true
GATSBY_ENABLE_THEME_TRANSITIONS=true
GATSBY_ENABLE_SYSTEM_THEME_DETECTION=true
GATSBY_ENABLE_THEME_PERSISTENCE=true

# Experimental Features
GATSBY_EXPERIMENTAL_FEATURES=false
GATSBY_ENABLE_PREACT=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
GATSBY_HOT_RELOAD=true
GATSBY_REFRESH_ENDPOINT=/__refresh
GATSBY_WEBPACK_ANALYZE=false

# Testing Configuration
JEST_COVERAGE_THRESHOLD=85
CYPRESS_RECORD=false
CYPRESS_VIDEO=false

# Mock API Configuration (for development/testing)
MOCK_API_PORT=3001
MOCK_API_DELAY=100

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# LIGHTHOUSE CI CONFIGURATION
# =============================================================================

LHCI_GITHUB_APP_TOKEN=your-lighthouse-ci-token
LHCI_SERVER_BASE_URL=https://lighthouse-ci.nautel.dev